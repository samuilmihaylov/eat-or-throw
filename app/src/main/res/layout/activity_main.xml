<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"

    tools:context=".MainActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_text_recognition"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/expiry_date_image"
            android:text="@string/click_to_scan_expire_date" />

        <ImageView
            android:id="@+id/expiry_date_image"
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/productexpirydate"
            android:scaleType="fitXY"
            android:src="@drawable/expiry_date_placeholder" />

        <TextView
            android:id="@+id/info_text_text_recognition"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/expiry_date_image" />
    </android.support.v7.widget.CardView>

